{
  "compilerOptions": {
    /* Basic Options */
    "target": "es2019",
    "module": "commonjs",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "pretty": true,
    "declaration": true,

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": false,
    "alwaysStrict": false,

    /* Additional Checks */
    "noUnusedLocals": true,

    "esModuleInterop": false
  },
  "include": [
    "./lib/**/*"
  ]
}
