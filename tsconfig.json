{
  "compilerOptions": {
    "outDir": "./dist",
    "pretty": true,
    "lib": ["es2017", "es5", "es2015.promise"],
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "importHelpers": true,
    "strict": true,
    "strictNullChecks": false,
    "downlevelIteration": true,
    "noImplicitAny": false, // Temporary, to reuse code from snyk-go-plugin
  },
  "include": [
    "./lib/**/*"
  ]
}
